@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?9hchwz');
	src:url('../fonts/icomoon.eot?#iefix9hchwz') format('embedded-opentype'),
		url('../fonts/icomoon.woff?9hchwz') format('woff'),
		url('../fonts/icomoon.ttf?9hchwz') format('truetype'),
		url('../fonts/icomoon.svg?9hchwz#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
azul = #22BCE0
gris = #444
naranja = #DD4F24
gris_texto = #7A7A7A
a
	color naranja
body 
	background #E8E8E8
	color gris
	font-family Arial
	font-size 16px
footer
	background naranja
	color rgba(white,0.5)
	width 100%
	text-align center
	padding 1em 0
	h3
		font-size 14px
		font-weight normal
		strong
			display block
		.mejor:after
		.mejor:before
			content " - "
header
	background gris
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	padding 1em
	position relative
	overflow hidden
	z-index 1
	.logo 
		border-right 2px solid yellow
		float left
		width 60px
		
		img 
			width 52px
	.titular
		margin 0 80px 0 80px
		.filtro
			color azul
			font-weight bold 
			font-style italic
		.publicar
			background naranja
			color blanco
			float right
			margin -5px 1em 0 0
			text-shadow 1px 1px 0px black
			padding 0.2em 0.5em
			&:before
				font-family "icomoon"
				content "\e908 "
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	.usuario
		position absolute
		top 10px
		right 10px
		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			top 15px
			text-align right
			width 100%
			z-index 0
		.avatar
			margin  0 1em 0 0
			z-index 2
			position relative
			img
				width 50px
				border-radius 50%
				
				
nav 
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-top 20px solid transparent
		border-left 15px solid white
		content ""
		position absolute
	.menu
		height 40px
		line-height 40px
		text-align center
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			a
				//border 1px solid red
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		color gris_texto
		margin-top 1em
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			.datos
				float right
				.comentarios
					background gris_texto
					border-radius 3px
					color white
					padding 2px 5px
					margin 0 1em 0 0 
					text-decoration none
				.estrellita
					text-decoration none
					color naranja
					&:before
						font-family "icomoon"
						content "\e9d9"
						
			.votos
				float left
				.down
				.up
					text-decoration none
				.down
					color red
					&:before
						font-family "icomoon"
						content "\ea3a"
				.up
					color green
					&:before
						font-family "icomoon"
						content "\ea3e"
		.descripcion
			color gris_texto
			overflow hidden
			.detalles
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 2em 0
				.fecha
					float right
					margin 0 1em 0 0
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
				.titulo
					color gris
					font-size 18px
					font-size italic
					margin 0
					padding 0.5em 0.5em 0 0
			.imagen
				float left
				margin 0
				/*cuando flotas un objeto no cuenta el margin*/
				img 
					height 160px
					vertical-align top
					width 120px
	
@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative

				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				//odd es para elementos impares
				// para pares
				margin-right 2%



