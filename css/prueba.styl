amarillo = #fff900
negro = #422931
body
    background #dedede
    text-align center
    font-family Georgia, "Times New Roman", Times, serif
    font-style italic
    font-size 16px
    margin 0
    padding 0
    header
    	background black
    	color white
    	padding 20px
    	.logo img
    		float left
    		width 100px
    	.facebook
	    		position absolute
	    		top 40px
	    		right 40px
	    		height 30px
	    .peru
	    		position absolute
	    		top 40px
	    		right 80px
	    		height 30px
	nav
		position relative
		.contenedor
			background amarillo
			padding  0 0 10px 0
			width 100%
			li
				display inline-block
				list-style none
				width 48%
				a
					background amarillo
					color negro
					font-size 20px
					display block
					height 80px
					width 100%
					margin-top auto
					margin-bottom auto
					text-decoration none
					font-family: 'Bitter', serif;
				.column1
					text-align left
				.column2
					text-align right
				a:hover
					background #e8e000
					color white
			img
				//border 1px solid black
				border-radius 50%
				position absolute
				height 100%
				margin-left: auto;
				margin-right: auto;
				top 1px
				left 0
				right 0
	section
		article
			background white
			text-align justify
			margin-left auto
			margin-right auto
			width 70%
			padding 20px 40px
	footer
		background black
		color white
		height 50px

